<div class="card m-1" style="width: 12rem;">
  <img src={{user.avatar}} class="card-img-top object-fit-cover" alt={{user._id}}>
  <div class="card-body">
    {{#if user.name}}
    <p class="card-title">{{user.name}}</p>
    {{/if}}
    <h3 class="card-text">{{user.email}}</h3>
    {{#if user.date}}
    <p class="card-text">{{user.date}}</p>
    {{/if}}
    {{#if user.city}}
    <p class="card-text">{{user.city}}</p>
    {{/if}}
    <a href="/update-user" class="btn btn-success" href="#">Update</a>
  </div>
</div>